{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Servers": {
    "Authentication": "https://localhost:7001",
    "Resources": "https://localhost:9001"
  },
  "OidcSettings": {
    "ClientId": "mvc_Client",
    "ClientSecret": "mvc_Secret"
  },
  "AllowedHosts": "*",
  "ClientsPrivateData": {
    "Authentication": {
      "ClientId": "authenticationServer_Client",
      "ClientSecret": "authenticationServer_Secret",
      "Scopes": [ "IdentityServerApi" ]
    },
    "Resources": {
      "ClientId": "resourceServer_Client",
      "ClientSecret": "resourceServer_Secret",
      "Scopes": [ "fullAccess_resourceServer" ]
    }
  }
}
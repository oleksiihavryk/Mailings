@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8"/>
    <title>Mailings</title>
    <environment names="development">
        <link rel="stylesheet" type="text/css" 
              asp-href-include="/css/styles**.css" asp-href-exclude="**.min.css"/>
    </environment>
    <environment names="staging, production">
        <link rel="stylesheet" type="text/css" asp-href-include="/css/styles**.min.css"/>
    </environment>
    <link rel="shortcut-icon" type="image/png" href="img/mailings-favicon.png"/>
    @await RenderSectionAsync("Links", false)
</head>
<body>
    @await Html.PartialAsync("_Header")
    <div class="content">
        @await RenderSectionAsync("Content")
    </div>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>